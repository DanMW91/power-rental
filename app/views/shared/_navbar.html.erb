        <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
      </li>
        <% end %>
      <li class="nav-item">
      <% if user_signed_in? %>
        <%= link_to "List a Power", new_power_path, class: "nav-link" %>
      <% else %>
        <%= link_to "List a Power", new_user_session_path, class: "nav-link" %>
      <% end %>
    </li>
        <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <%= image_tag "Doctor-Doom.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Messages", "#", class: "dropdown-item" %>
          <%= link_to "My Powers", my_powers_path, class: "dropdown-item" %>
          <%= link_to "Profile", "#", class: "dropdown-item" %>
          <%= link_to "Bookings", my_bookings_path , class: "dropdown-item" %>
          <%= link_to "Wishlist", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
