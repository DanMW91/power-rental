

<div class="container d-flex justify-content-between">


  <div class="power-info">
  <h1><%= @power.name %></h1>
    <img class="show-image" src="<%=@power.image_url%>" />
    <p><%= @power.description %></p>
    <p><%= @power.power_type %></p>
    <p><%= @power.element %></p>
    <p><%= @power.location %></p>
    <p><%= @power.price %></p>
    <p><%= @power.example_hero %></p>
  </div>
<% if current_user != @power.user%>

  <div class="book-form">
  <h3>Book this power!</h3>
    <%= simple_form_for [@power, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit "Request Booking", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
